<h1 class="mt-2 p-4 text-center">Post table</h1>
<table class="table" >
  <thead class="table-info">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <%user_si%>
      <th><%=@author%></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |posts| %>
      <tr>
        <td><%= posts.title %></td>
        <td><%= posts.body %></td>
        <% @author_post_hidden = posts.user.name%>
        <%user_si%>
        <td><%= @author_post_visible%></td>
      </tr>
    <% end%>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_url, class: "btn btn-primary" %>
<%= @su_button %>

